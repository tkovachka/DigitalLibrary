@model List<Book>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<div class="container">
    <p>
        <a asp-action="Create">Create New</a>
    </p>

    @for (int i = 0; i < Model.Count; i++)
    {
        var item = Model[i];

        @if(i%3 == 0)
        {
            @:<div class="row">
        }

            <div class="col-12 col-md-4">
                <div class="card h-100">
                    @if (!string.IsNullOrWhiteSpace(item.ThumbnailUrl))
                    {
                        <img src="@item.ThumbnailUrl"
                                class="card-img-top"
                                alt="@item.Title" />
                    }

                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        @if (!string.IsNullOrWhiteSpace(item.Subtitle))
                        {
                            <h6 class="card-subtitle mb-2 text-muted">@item.Subtitle</h6>
                        }

                        <p class="card-text mb-2">
                            <strong>ISBN-10:</strong> @item.Isbn10<br />
                            <strong>ISBN-13:</strong> @item.Isbn13<br />
                            <strong>Published:</strong> @item.PublishedDate:yyyy-MM-dd<br />
                            <strong>Page count:</strong> @item.PageCount<br />
                            <strong>Language:</strong> @item.Language<br />
                            <strong>Average rating:</strong> @item.AverageRating<br />
                            <strong>Ratings count:</strong> @item.RatingsCount<br />
                            <strong>Description:</strong> @item.Description<br />
                            <strong>Publisher:</strong> @item.Publisher?.Name
                        </p>

                        <p class="fw-semibold mb-1"><strong>Authors</strong></p>
                        <ul class="list-unstyled mb-2">
                            @foreach (var author in item.Authors)
                            {
                                <li>@author.Name</li>
                            }
                        </ul>

                        <p class="fw-semibold mb-1"><strong>Categories</strong></p>
                        <ul class="list-inline mb-0">
                            @foreach (var cat in item.Categories)
                            {
                                <li class="list-inline-item badge bg-secondary">@cat.Name</li>
                            }
                        </ul>
                    </div>

                    <div class="card-footer bg-white border-0">
                        <a class="btn btn-primary" asp-action="Edit"    asp-route-id="@item.Id">Edit</a> 
                        <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a> 
                        <a class="btn btn-danger" asp-action="Delete"  asp-route-id="@item.Id">Delete</a>
                    </div>
                </div>
            </div>
       
        @if(i%3 == 2) 
        {
            @:</div>    
        }
}
</div>
