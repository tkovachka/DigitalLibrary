@model Book

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Book Details</h4>
    <div>
        <a asp-action="Index" class="btn btn-info">Back to List</a>
        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.Id">Edit</a>
        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@Model.Id">Delete</a>
        @if (ViewBag.UsersLoan)
        {
            <!-- User has the loan -->
            <form asp-controller="Loans" asp-action="Return" method="get" style="display:inline;">
                <input type="hidden" name="id" value="@ViewBag.LoanId" />
                <button type="submit" class="btn btn-warning">Return Book</button>
            </form>
        }
        else if (Model.IsAvailable)
        {
            <!-- Book available → Loan button -->
            <form asp-controller="Loans" asp-action="Loan" method="post" style="display:inline;">
                <input type="hidden" name="bookId" value="@Model.Id" />
                <button type="submit" class="btn btn-success">Loan Book</button>
            </form>
        }
        else if (ViewBag.UsersReservation)
        {
            if (ViewBag.ActiveReservation)
            {
                <!-- Reservation is active for user -->
                <form asp-controller="Reservations" asp-action="Details" method="get" style="display:inline;">
                    <input type="hidden" name="id" value="@ViewBag.ReservationId" />
                    <button type="submit" class="btn btn-success">Activate Loan Now!</button>
                </form>
            }
            else
            {
                <!-- Reservation exists but not active → Cancel button -->
                <form asp-controller="Reservations" asp-action="Cancel" method="post" style="display:inline;">
                    <input type="hidden" name="id" value="@ViewBag.ReservationId" />
                    <button type="submit" class="btn btn-danger">Cancel Reservation</button>
                </form>
            }
        }
        else
        {
            <!-- Book loaned by someone else, user has no reservation -->
            <form asp-controller="Reservations" asp-action="Reserve" method="get" style="display:inline;">
                <input type="hidden" name="bookId" value="@Model.Id" />
                <button type="submit" class="btn btn-warning">Reserve Book</button>
            </form>
        }

    </div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Isbn10)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Isbn10)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Isbn13)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Isbn13)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Subtitle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Subtitle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PublishedDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PublishedDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PageCount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PageCount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Language)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Language)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AverageRating)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AverageRating)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RatingsCount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RatingsCount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Publisher)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Publisher.Name)
        </dd>
        <dt>Author(s)</dt>
        <dd>
            <ul class="list-unstyled mb-2">
                @foreach (var author in @Model.Authors)
                {
                    <li>@author.Name</li>
                }
            </ul>
        </dd>
        <dt>Categories</dt>
        <dd>
            <ul class="list-inline mb-0">
                @foreach (var cat in @Model.Categories)
                {
                    <li class="list-inline-item badge bg-secondary">@cat.Name</li>
                }
            </ul>
        </dd>
        <dt class="col-sm-2">
            ThumbNail
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.ThumbnailUrl" alt="@Model.Title Cover Image" />
        </dd>
    </dl>
</div>
